<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout"
    tools:context=".HomeScreen.HomeScreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wheathericonlayout"
            >

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="148dp"
                android:layout_height="169dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                app:srcCompat="@drawable/foggy"
                />

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:gravity="top"
                android:text="15Â°C"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uv_index_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/wheathericonlayout">


            <TextView
                android:id="@+id/uv_index_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/uv_index"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/uv_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/uv_index_header"
                android:text="-"
                android:textSize="90sp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryLight"
                android:clickable="true"
                android:onClick="getIndexInfo"/>
        </RelativeLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/wheathericonlayout"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"/>


    </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/linLayForGrid"
         android:layout_margin="8dp"
         android:orientation="vertical"
         android:weightSum="10"
         >
         
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             >
             <TextView
                 android:id="@+id/skincancerinformationheader"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/skincnacerTools"
                 android:textStyle="bold"
                 android:textSize="16sp"
                 android:textAlignment="center"
                 android:textColor="@color/colorPrimaryDark"/>

         </RelativeLayout>
         
         <GridLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:columnCount="2"
             android:rowCount="2"
             android:layout_weight="9"
             android:alignmentMode="alignMargins"
             android:columnOrderPreserved="false"
             android:padding="14dp">

             <!-- Row 1 -->

                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewDiag"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="goToActivity"
                    >
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:rowCount="4"
                        android:columnCount="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/mole_mate_logo"
                            android:scaleType="centerInside"
                            android:layout_rowWeight="3"
                            android:layout_columnWeight="1"
                            />
                        <TextView
                           android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:textAlignment="center"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="@string/menuItemTakePic"
                            />

                    </GridLayout>

                </androidx.cardview.widget.CardView>


                <!-- Column 2 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/cardviewStor"
                 android:layout_height="0dp"
                 android:layout_width="0dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:layout_marginBottom="16dp"
                 android:layout_marginStart="16dp"
                 android:layout_marginEnd="16dp"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 android:clickable="true"
                 android:focusable="true"
                 android:onClick="goToActivity"
                 >
                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:layout_margin="16dp"
                     android:orientation="vertical"
                     android:rowCount="4"
                     android:columnCount="1">
                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="0dp"
                         android:layout_gravity="center_horizontal"
                         android:src="@drawable/folder_big"
                         android:scaleType="centerInside"
                         android:layout_rowWeight="3"
                         android:layout_columnWeight="1"
                         />
                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="0dp"
                         android:layout_rowWeight="1"
                         android:layout_columnWeight="1"
                         android:textAlignment="center"
                         android:gravity="center_vertical|center_horizontal"
                         android:textColor="@color/colorPrimaryDark"
                         android:text="@string/menuItemHealth"
                         />

                 </GridLayout>

             </androidx.cardview.widget.CardView>


             <!-- Row 2 -->

                 <!-- Column 1 -->

             <androidx.cardview.widget.CardView
                 android:id="@+id/cardviewPrev"
                 android:layout_height="0dp"
                 android:layout_width="0dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:layout_marginBottom="16dp"
                 android:layout_marginStart="16dp"
                 android:layout_marginEnd="16dp"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 android:clickable="true"
                 android:focusable="true"
                 android:onClick="goToActivity"
                 >
                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:layout_margin="16dp"
                     android:orientation="vertical"
                     android:rowCount="4"
                     android:columnCount="1">
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_gravity="center_horizontal"
                         android:src="@drawable/ic_prev"
                         android:scaleType="centerCrop"
                         android:layout_rowWeight="3"
                         android:layout_columnWeight="1"
                         />
                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="0dp"
                         android:layout_rowWeight="1"
                         android:layout_columnWeight="1"
                         android:textAlignment="center"
                         android:gravity="center_vertical|center_horizontal"
                         android:textColor="@color/colorPrimaryDark"
                         android:text="@string/menuItemPrev"
                         />

                 </GridLayout>

             </androidx.cardview.widget.CardView>


             <!-- Column 2 -->
             <androidx.cardview.widget.CardView
                 android:id="@+id/cardviewImpressum"
                 android:layout_height="0dp"
                 android:layout_width="0dp"
                 android:layout_columnWeight="1"
                 android:layout_rowWeight="1"
                 android:layout_marginBottom="16dp"
                 android:layout_marginStart="16dp"
                 android:layout_marginEnd="16dp"
                 app:cardElevation="8dp"
                 app:cardCornerRadius="8dp"
                 android:clickable="true"
                 android:focusable="true"
                 android:onClick="goToActivity"
                 >
                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_horizontal|center_vertical"
                     android:layout_margin="16dp"
                     android:orientation="vertical"
                     android:rowCount="4"
                     android:columnCount="1">
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_gravity="center_horizontal"
                         android:src="@drawable/ic_person"
                         android:tint="@color/colorPrimaryComplementary"
                         android:scaleType="centerCrop"
                         android:layout_rowWeight="3"
                         android:layout_columnWeight="1"
                         />
                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="0dp"
                         android:layout_rowWeight="1"
                         android:layout_columnWeight="1"
                         android:textAlignment="center"
                         android:gravity="center_vertical|center_horizontal"
                         android:textColor="@color/colorPrimaryDark"
                         android:text="@string/impressum"
                         />

                 </GridLayout>

             </androidx.cardview.widget.CardView>


         </GridLayout>




     </LinearLayout>



    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mainMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/main_menu_header"
        app:menu="@menu/drawer_main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>