<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".ImageFileStorage.ImageArchiveShowMole"
    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="12dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_mole_diagnosis_layout"
            >

            <ImageView
                android:id="@+id/show_diagnosis_mole_image"
                android:layout_width="148dp"
                android:layout_height="169dp"
                android:layout_margin="6dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/mole_mate_logo_and_name"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show_diagnosis_header_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/show_mole_diagnosis_layout"
            android:gravity="center_vertical|center_horizontal"
            >


            <TextView
                android:id="@+id/show_diagnosis_procent_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Gutartig"
                />

            <TextView
                android:id="@+id/show_diagnosis_procent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_diagnosis_procent_header"
                android:textSize="30sp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="99.0"
                android:textColor="@android:color/holo_green_light"
                android:clickable="true"
                android:onClick="buttonAction"
                />

        </RelativeLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/show_diagnosis_text_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Deine Diagnose!"
        />



    <TextView
        android:id="@+id/show_diagnosis_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Dieses Muttermal ist gutartig!"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="1"
        android:columnCount="2"
        >
        <Button
            android:id="@+id/show_takenCareOf_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/takenCareOf"
            android:textColor="@color/btnTextColor"
            android:onClick="buttonAction"/>
        <Button
            android:id="@+id/show_send_to_Doc_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/sendToDoc"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textColor="@color/btnTextColor"
            android:onClick="buttonAction"/>
    </GridLayout>

</LinearLayout>