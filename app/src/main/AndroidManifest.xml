<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.master.molemate">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.CAMERA"
        android:maxSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/molemate_launcher_ic_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/molemate_launcher_ic_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Prevention.Prevention"
            android:parentActivityName=".HomeScreen.HomeScreen"/>
        <activity android:name=".Impressum.Impressum"
            android:parentActivityName=".HomeScreen.HomeScreen"/>
        <activity android:name=".HomeScreen.HomeScreen" />
        <activity
            android:name=".HomeScreen.UVIndexInfo"
            android:parentActivityName=".HomeScreen.HomeScreen" />
        <activity android:name=".DiagnosisTool.Diagnosis_Tool"
            android:parentActivityName=".HomeScreen.HomeScreen"/>
        <activity
            android:name=".ImageFileStorage.ImageFileArchive"
            android:parentActivityName=".HomeScreen.HomeScreen" />
        <activity
            android:name=".ImageFileStorage.ImageArchiveShowMole"
            android:parentActivityName=".ImageFileStorage.ImageFileArchive" />
        <activity android:name=".ChooseActionScreen" />
        <activity android:name=".LoginProcess.UserRegistration"
            android:parentActivityName=".LoginProcess.LoginActivity"/>
        <activity android:name=".LoginProcess.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginProcess.PersonalInformation"
            android:parentActivityName=".LoginProcess.LoginActivity"/>

        <activity android:name=".MainActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.master.molemate.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>